<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="500.0" maxWidth="500.0" minHeight="500.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iaroslaveremeev.employeesfx.MainController">
    <MenuBar prefHeight="26.0" prefWidth="376.0">
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#buttonSaveFile" text="Save">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                </items>
            </Menu>
        </menus>
    </MenuBar>
   <Button fx:id="getStudentsButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="194.0" text="Get relevant list of students" />
   <TableView fx:id="mainTable" prefHeight="404.0" prefWidth="500.0">
     <columns>
       <TableColumn fx:id="id" prefWidth="40.0" resizable="false" text="ID" />
       <TableColumn fx:id="name" prefWidth="190.0" resizable="false" text="NAME" />
         <TableColumn fx:id="age" minWidth="0.0" prefWidth="90.0" resizable="false" text="AGE" />
         <TableColumn fx:id="num" prefWidth="90.0" resizable="false" text="NUMBER" />
         <TableColumn fx:id="salary" prefWidth="90.0" resizable="false" text="SALARY" />
     </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>
</VBox>
